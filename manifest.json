{
  "manifest_version": 2,
  "name": "Content Blocker",
  "description": "Block parts of web pages you don't want to see again.",
  "version": "1.0.1",
  "author": {
    "name": "Adem Coskuner",
    "github": "https://github.com/ac5er",
    "source-repo": "https://github.com/ac5er/content-blocker"
  },
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "64": "icons/icon_64.png",
    "128": "icons/icon_128.png",
    "256": "icons/icon_256.png"
  },
  "permissions": ["activeTab", "tabs", "storage"],
  "background": { "scripts": ["scripts/common.js", "scripts/background.js"] },
  "content_scripts": [
    {
      "matches": ["\u003Call_urls>", "*://*/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
