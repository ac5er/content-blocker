root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_style = space
indent_size = 2
insert_final_newline = false

[*.js]
indent_style = space
indent_size = 2

[*.md]
indent_size = 4
trim_trailing_whitespace = false
